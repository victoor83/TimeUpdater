<Window x:Class="TimeUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeUpdater"
        mc:Ignorable="d"
        Title="Time Updater" SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">

    <Grid Height="264" Width="662" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="283*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="3">
            <Menu DockPanel.Dock="Top" Background="White">
                <MenuItem Header="_Actions">
                    <MenuItem Header="_Open excel time" Click="mnuExcel_Click"/>
                    <MenuItem Header="_Check last saved time" Click="mnuLastTime_Click"/>
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <Button Content="Add time" HorizontalAlignment="Left" Margin="14,172,0,0" VerticalAlignment="Top" Height="59" Width="110" Click="ButtonAddTime_Click" Grid.ColumnSpan="3"/>
        <Label x:Name="statusLabel" Content="Status:" Margin="14,237,283,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
        <DatePicker x:Name="Dp_Date" HorizontalAlignment="Right" Margin="0,0,508,217" VerticalAlignment="Bottom" Grid.ColumnSpan="3" Width="134"/>
        <local:TimeControl x:Name="UcStart" Margin="16,0,0,126" Height="53" HorizontalAlignment="Left" Width="138" VerticalAlignment="Bottom" Grid.ColumnSpan="3"/>
        <local:TimeControl x:Name="UcPauseBegin" Margin="75,85,0,0" Height="54" VerticalAlignment="Top" HorizontalAlignment="Left" Width="138" Grid.Column="2" />
        <local:TimeControl x:Name="UcPauseEnd" Margin="234,85,0,0" Height="54" VerticalAlignment="Top" HorizontalAlignment="Left" Width="138" Grid.Column="2" />
        <local:TimeControl x:Name="UcEnd" Margin="395,85,0,0" HorizontalAlignment="Left" Width="138" Height="54" VerticalAlignment="Top" Grid.Column="2" />
        <Label Content="File to write into: " HorizontalAlignment="Left" Margin="126,152,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <Label x:Name="labFilePath" Content="not found" HorizontalAlignment="Left" Margin="234,153,0,0" VerticalAlignment="Top" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" Width="299" Grid.Column="2"/>
        <Label Content="Backup file folder: " HorizontalAlignment="Left" Margin="126,187,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <Label x:Name="labBackupFolder" Content="not found" HorizontalAlignment="Left" Margin="234,184,0,0" VerticalAlignment="Top" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" Width="299" Grid.Column="2"/>
        <Label Content="Broker file path: " HorizontalAlignment="Left" Margin="127,219,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <Label x:Name="labBrokerFilePath" Content="not found" HorizontalAlignment="Left" Margin="235,216,0,0" VerticalAlignment="Top" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" Width="299" Grid.Column="2"/>
        <TextBox x:Name="txtInsertTimes" TextWrapping="Wrap" Margin="269,27,33,216" BorderBrush="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" Background="#FFEDDCDC" Foreground="#FF9C9999" Grid.Column="2" TextInput="txtInsertTimes_TextInput" TextChanged="txtInsertTimes_TextChanged" GotFocus="txtInsertTimes_GotFocus" LostFocus="txtInsertTimes_LostFocus"/>
        <Label Content="Times from Excel:" HorizontalAlignment="Left" Margin="168,24,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <Button x:Name="btnOpenFolderFileToWriteInto" Content="..." Grid.Column="2" Margin="538,155,10,86" Click="btnOpenFolderFileToWriteInto_Click"/>
        <Button x:Name="btnOpenFolderBackupFile" Content="..." Grid.Column="2" Margin="538,186,10,55" Click="btnOpenFolderBackupFile_Click"/>
        <Button x:Name="btnOpenFolderBrokerFile" Content="..." Grid.Column="2" Margin="538,218,10,23" Click="btnOpenFolderBrokerFile_Click"/>
        <Label Content="Project:" HorizontalAlignment="Left" Margin="219,50,0,0" VerticalAlignment="Top" Grid.Column="2"/>
        <ComboBox x:Name ="comboProject" Width="120" Grid.Column="2" Margin="271,52,175,188"/>
    </Grid>
</Window>
